<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #e6e6e6"
      xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LoginController">
    <ToolBar layoutX="-200.0" layoutY="-6.0" style="-fx-background-color: #e6e6e6" translateX="765.0">
        <items>
            <Button fx:id="closeButton" maxHeight="20.0" mnemonicParsing="_F4" styleClass="red"/>
        </items>
    </ToolBar>
    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="-96.0" style="-fx-font-weight: Bold;"
           text="STUDENT MANAGEMENT SYSTEM" textAlignment="CENTER" textFill="#00986e" translateX="275.0"
           translateY="6.0">
        <font>
            <Font size="15.0"/>
        </font>
    </Label>
    <GridPane layoutY="50.0" prefHeight="350.0" prefWidth="600.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" prefWidth="250.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="100.0" minHeight="100.0" prefHeight="100.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="80.0" minHeight="80.0" prefHeight="80.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="80.0" minHeight="80.0" prefHeight="80.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="90.0" minHeight="90.0" prefHeight="80.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <children>
            <Label text="LOGIN PAGE" textFill="#00986e" GridPane.columnIndex="1" GridPane.halignment="LEFT"
                   GridPane.valignment="CENTER">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
                <GridPane.margin>
                    <Insets/>
                </GridPane.margin>
            </Label>
            <Label text="User Name:" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <Label text="Password:" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="TOP">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets right="20.0"/>
                </GridPane.margin>
            </TextField>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="TOP">
                <GridPane.margin>
                    <Insets right="20.0"/>
                </GridPane.margin>
            </TextField>
            <Button mnemonicParsing="false" fx:id="login" text="Log-in" GridPane.columnIndex="1"
                    GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="TOP">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
        </children>
    </GridPane>
</Pane>
